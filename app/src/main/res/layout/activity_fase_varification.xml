<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loanActivity.FaseVarification"
    android:fillViewport="true"
    android:orientation="vertical"
    android:gravity="start">
    <LinearLayout android:id="@+id/linearScreenSix"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                android:background="#FFFFFF"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    >

                    <ImageView
                        android:id="@+id/ms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_7pxh"
                        android:layout_marginBottom="@dimen/_7pxh"
                        android:padding="@dimen/_8pxv"
                        android:src="@drawable/img_arrowleft"/>


                    <ImageView
                        android:id="@+id/msc1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_toLeftOf="@+id/msc"
                        android:layout_marginEnd="15dp"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_help" />

                    <ImageView
                        android:id="@+id/msc"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications_none" />

                </RelativeLayout>


            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout android:gravity="start"
            android:id="@+id/frameStackuser"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1pxv" android:layout_width="match_parent">
            <RelativeLayout
                android:id="@+id/ttt"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <ProgressBar
                android:id="@+id/pg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="#111111"
                style="?android:attr/progressBarStyle"
                android:layout_centerInParent="true"/>
            <LinearLayout android:id="@+id/linearColumnprice"
                android:layout_gravity="top|start"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Face Verification"
                    android:textSize="22sp"
                    android:textColor="#111111"
                    android:textStyle="normal"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:fontFamily="sans-serif-medium"
                    />
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginEnd="@dimen/_21pxh"
                    android:layout_marginTop="@dimen/_125pxh"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_21pxh">
                    <ImageView
                        android:id="@+id/i3"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/iconsselfie"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical|center_horizontal"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click this take button and capture your clear selfe otherwise it rejected"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="5dp"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnGetStarted"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_100pxv"
                    android:layout_marginBottom="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv" android:singleLine="true"
                    android:text="Take Selfe"
                    android:textAllCaps="false" style="@style/btnSolidRounded_1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnGetStarted2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_marginBottom="@dimen/_20pxv"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv" android:singleLine="true"
                    android:text="Next"
                    android:textAllCaps="false" style="@style/btnSolidRounded_1" />
            </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
</LinearLayout>
</ScrollView>