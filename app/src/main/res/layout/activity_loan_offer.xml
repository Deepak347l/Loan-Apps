<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:gravity="start"
    android:id="@+id/linearColumnwelcome"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".loanActivity.LoanOfferActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:id="@+id/linearScreenSix"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                android:background="#FFFFFF"
                >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    >



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">


                        <TextView android:ellipsize="end"
                            android:id="@+id/txtWelcome"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_24pxh"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_7pxh"
                            android:layout_marginBottom="@dimen/_7pxh"
                            android:padding="@dimen/_8pxv"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@string/lbl_moneytap"
                            style="@style/txtInterbold32" />

                    </LinearLayout>

                <ImageView
                    android:id="@+id/msc1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/msc"
                    android:layout_marginEnd="15dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_help" />

                    <ImageView
                        android:id="@+id/msc"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications_none" />

                </RelativeLayout>


            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>




        <FrameLayout android:gravity="start"
            android:id="@+id/frameStackuser"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1pxv" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearColumnprice"
                android:layout_gravity="top|start"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical" >
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearDribbbleshot"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_24pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_34pxv"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" style="@style/groupStylewhite_2">
                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageCalculator"
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        app:iss_auto_cycle="true"
                        app:iss_period="1000"
                        app:iss_delay="1000"
                    />
                </LinearLayout>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearRowherearemorew"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_23pxh"
                    android:layout_marginStart="@dimen/_23pxh"
                    android:layout_marginTop="@dimen/_44pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtHEREAREMOREW"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@string/msg_here_are_more_w"
                        style="@style/txtInterblack14_1" tools:text="@string/msg_here_are_more_w"/>
                    <View android:background="@color/black_900"
                        android:id="@+id/lineLineOne"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_16pxv"
                        android:layout_marginStart="@dimen/_48pxh"
                        android:layout_weight="0.0" android:layout_width="0dp"/>
                </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_18pxv"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upto ₹1,00,000"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/t2"
                            android:layout_below="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Loan"
                            android:padding="5dp"
                            android:textSize="22sp"
                            android:layout_marginTop="1dp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-black"/>
                        <TextView
                            android:id="@+id/t3"
                            android:layout_below="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repayment upto 1 month"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_marginTop="1dp"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <ImageView
                            android:id="@+id/i2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_forward"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/h1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_18pxv"
                    android:padding="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/x1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upto ₹50,000"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/x2"
                            android:layout_below="@+id/x1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Loan"
                            android:padding="5dp"
                            android:textSize="22sp"
                            android:layout_marginTop="1dp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-black"/>
                        <TextView
                            android:id="@+id/x3"
                            android:layout_below="@+id/x2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repayment upto 15 days"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_marginTop="1dp"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <ImageView
                            android:id="@+id/y2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_forward"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/p1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_18pxv"
                    android:padding="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">
                        <TextView
                            android:id="@+id/q1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upto ₹30,000"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/q2"
                            android:layout_below="@+id/q1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pocket Loan"
                            android:padding="5dp"
                            android:textSize="22sp"
                            android:layout_marginTop="1dp"
                            android:textColor="#111111"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-black"/>
                        <TextView
                            android:id="@+id/q3"
                            android:layout_below="@+id/q2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repayment upto 7 days"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:layout_marginTop="1dp"
                            android:textStyle="normal"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif-medium"/>
                        <ImageView
                            android:id="@+id/s2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_forward"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="25dp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
